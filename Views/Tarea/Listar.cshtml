
@model MVC.ViewModels.ListarTareaViewModel

<h2>Lista Tarea</h2>

<table class = "table">
    <thead>
        <tr>
            <th hidden>ID</th> <!-- oculto el id--->
            <th hidden>ID Tablero</th>
            <th>Tarea</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th>Estado</th>
            <th hidden>ID usuario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.TareasViewModels)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td hidden>@tarea.IdTablero</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.Estado</td>
                <td hidden>@tarea.IdUsuarioAsignado1</td>
                @if(@Model.Operador != "operador")
                {
                <td>
                        <a asp-controller="Tarea" asp-action="Update" asp-route-id="@tarea.Id" class="btn btn-primary">Modificar</a>

                        <a asp-controller="Tarea" asp-action="Delete" asp-route-id="@tarea.Id" class="btn btn-primary" onclick="return confirm('Â¿Estas seguro que quieres eliminar el elemento?')">Eliminar</a>  
                </td>
                }
            </tr>
        }
        @if(@Model.Operador != "operador")
        {
        <tr>
                <a asp-controller="Tarea" asp-action="Create" class="btn btn-primary">Crear tarea</a>  
        </tr>
        }
    </tbody>
</table>
@if(@Model.Operador == "operador")
{
<h5>Tareas asignadas</h5>
<table class = "table">
    <thead>
        <tr>
            <th hidden>ID</th> <!-- oculto el id--->
            <th hidden>ID Tablero</th>
            <th>Tarea</th>
            <th>Descripcion</th>
            <th>Color</th>
            <th>Estado</th>
            <th hidden>ID usuario</th>
        </tr>
    </thead>
    <tbody>
        @foreach (var tarea in Model.MyTareasViewModels)
        {
            <tr>
                <td hidden>@tarea.Id</td>
                <td hidden>@tarea.IdTablero</td>
                <td>@tarea.Nombre</td>
                <td>@tarea.Descripcion</td>
                <td>@tarea.Color</td>
                <td>@tarea.Estado</td>
                <td hidden>@tarea.IdUsuarioAsignado1</td>
                <td>
                        <a asp-controller="Tarea" asp-action="Update" asp-route-id="@tarea.Id" class="btn btn-primary">Modificar</a>

                </td>
            </tr>
        }
    </tbody>
</table>
}