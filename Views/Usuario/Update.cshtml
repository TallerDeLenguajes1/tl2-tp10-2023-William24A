@model MVC.ViewModels.UsuarioViewModel
@using tl2_tp10_2023_William24A.Models;

<form asp-controller="Usuario" asp-action="Update">
    <input hidden asp-for="@Model.Id"> 
    <div class="form-group">
        <label asp-for="@Model.NombreUsuario">Ingrese el nuevo nombre de usuario</label>
        <input asp-for="@Model.NombreUsuario" class="form-control"/>
        <span asp-validation-for="@Model.NombreUsuario" class="text-danger"></span> 
    </div>
    <div class="form-group">
        <label asp-for="@Model.Tipo">Ingrese el nuevo Tipo</label>
        <select asp-for="@Model.Tipo" class="form-control"  asp-items="@Html.GetEnumSelectList<Tipo>()"></select>
        <span asp-validation-for="@Model.Tipo" class="text-danger"></span> 
    </div>
    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}