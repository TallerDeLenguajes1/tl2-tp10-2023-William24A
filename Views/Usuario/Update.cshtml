@model Usuario

<form asp-controller="Usuario" asp-action="Update">
    <input hidden asp-for="@Model.Id"> 
    <div class="form-group">
        <label asp-for="@Model.NombreUsuario">Ingrese el nuevo nombre de usuario</label>
        <input asp-for="@Model.NombreUsuario" class="form-control"/>
    </div>

    <button type="submit">Enviar</button>
</form>