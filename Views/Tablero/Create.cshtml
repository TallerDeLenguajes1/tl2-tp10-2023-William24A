@model MVC.ViewModels.CrearTableroViewModel


<form asp-controller="Tablero" asp-action="Create">
    <div class="form-group">
        <label class="form-label" asp-for="@Model.Id_usuario_propietario"></label>
        <select class="form-select w-50" aria-label="Default select example" asp-for="@Model.Id_usuario_propietario">
            <option selected>Seleccione uno</option>
            @foreach (var usuario in Model.Usuarios)
            {
                <option value="@usuario.Id">@usuario.NombreUsuario</option>
            }
        </select>
    </div> 
    <div class="form-group">
        <label asp-for="@Model.Nombre">Nombre del Tablero</label>
        <input asp-for="@Model.Nombre" class="form-control" />
        <span asp-validation-for="@Model.Nombre" class="text-danger"></span>     
    </div>
    <div class="form-group">
        <label asp-for="@Model.Descripcion">Descripcion del Tablero</label>
        <input asp-for="@Model.Descripcion" class="form-control" />
        <span asp-validation-for="@Model.Descripcion" class="text-danger"></span> 
    </div>

    <button type="submit" class="btn btn-primary">Enviar</button>
</form>
@section Scripts{<partial name="_ValidationScriptsPartial"/>}