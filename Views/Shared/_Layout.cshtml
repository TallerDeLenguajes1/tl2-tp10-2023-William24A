<!DOCTYPE html>
<html lang="en">
<head>
    <meta charset="utf-8" />
    <meta name="viewport" content="width=device-width, initial-scale=1.0" />
    <title>@ViewData["Title"] - tl2_tp10_2023_William24A</title>
    <link rel="stylesheet" href="~/lib/bootstrap/dist/css/bootstrap.min.css" />
    <link rel="stylesheet" href="~/css/site.css" asp-append-version="true" />
    <link rel="stylesheet" href="~/tl2_tp10_2023_William24A.styles.css" asp-append-version="true" />
</head>
<body>
    <header>
        <nav class="navbar navbar-expand-sm navbar-toggleable-sm navbar-light bg-white border-bottom box-shadow mb-3">
            <div class="container-fluid">
                <a class="navbar-brand" asp-area="" asp-controller="Home" asp-action="Index">Proyecto Albarracin William</a>
                <button class="navbar-toggler" type="button" data-bs-toggle="collapse" data-bs-target=".navbar-collapse" aria-controls="navbarSupportedContent"
                        aria-expanded="false" aria-label="Toggle navigation">
                    <span class="navbar-toggler-icon"></span>
                </button>
                <div class="navbar-collapse collapse d-sm-inline-flex justify-content-between">
                    <ul class="navbar-nav flex-grow-1">
                        @if(!string.IsNullOrEmpty(Context.Session.GetString("Usuario")))
                        {
                                @if(Context.Session.GetString("Tipo") == Tipo.admin.ToString())
                                    {
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Listar">Usuario</a>
                                        </li>
                                        <li class="nav-item">
                                            <a class="nav-link text-dark" asp-area="" asp-controller="Tablero" asp-action="TodosTableros">Todos los tableros</a>
                                        </li>
                                    }
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tablero" asp-action="Listar">Tablero</a>
                                </li>
                                <li class="nav-item">
                                    <a class="nav-link text-dark" asp-area="" asp-controller="Tarea" asp-action="MyTarea">Mis Tareas</a>
                                </li>
                        }
                         @if(!string.IsNullOrEmpty(Context.Session.GetString("Usuario")))
                        {
                            <li class="nav-item dropdown">
                                <a class="nav-link dropdown-toggle" id="navbarDropdown" href="#" role="button" data-bs-toggle="dropdown" aria-expanded="false">
                                    <i class="bi bi-person-circle">Usuario: </i>
                                    @Context.Session.GetString("Usuario")
                                </a>
                                <ul class="dropdown-menu dropdown-menu-end" aria-labelledby="navbarDropdown">
                                    @* <li><hr class="dropdown-divider" /></li> *@
                                    <li>
                                        <a class="dropdown-item" asp-controller="Usuario" asp-action="Configuracion" asp-route-id= "@Context.Session.GetString("Id")">
                                            <i class="bi bi-gear-fill"></i>
                                            Configuración
                                        </a>
                                    </li>

                                    <li>
                                        <a class="dropdown-item" asp-controller="Login" asp-action="Logout">
                                            <i class="bi bi-power"></i>
                                            Cerrar sesión
                                        </a>
                                    </li>
                                </ul>
                            </li>
                        }
                    </ul>
                </div>
            </div>
        </nav>
    </header>
    <div class="container">
        <main role="main" class="pb-3">
            @RenderBody()
        </main>
    </div>

    <footer class="border-top footer text-muted">
        <div class="container">
            &copy; 2024 - Albarracin William Fernando - <a asp-area="" asp-controller="Home" asp-action="Privacy">Privacy</a>
            <!--<a class="nav-link text-dark" asp-area="" asp-controller="Usuario" asp-action="Create">Crear Usuario</a>-->    
        </div>
    </footer>
    <script src="~/lib/jquery/dist/jquery.min.js"></script>
    <script src="~/lib/bootstrap/dist/js/bootstrap.bundle.min.js"></script>
    <script src="~/js/site.js" asp-append-version="true"></script>
    @await RenderSectionAsync("Scripts", required: false)
</body>
</html>
